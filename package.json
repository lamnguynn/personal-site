{
  "name": "personal-site",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "prettier-fix": "prettier ./src --write",
    "prettier-check": "prettier ./src --check",
    "eslint-check": "eslint ./src --config eslint.config.ts && npm run prettier-fix",
    "eslint-fix": "npm run eslint-check -- --fix",
    "test-e2e": "cd e2e-tests && npx playwright test",
    "test-unit": "npx vitest run --project unit",
    "test-ui": "npx vitest run --project ui",
    "test-vite": "npx vitest"
  },
  "dependencies": {
    "@react-spring/three": "^10.0.1",
    "@react-three/drei": "^10.7.4",
    "@react-three/fiber": "^9.3.0",
    "@tailwindcss/vite": "^4.1.12",
    "animejs": "^4.1.3",
    "lucide-react": "^0.542.0",
    "path": "^0.12.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12",
    "three": "^0.179.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.36.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
